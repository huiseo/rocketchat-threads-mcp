# Rocket.Chat Server Configuration
ROCKETCHAT_URL=https://your-rocketchat-server.com
ROCKETCHAT_AUTH_TOKEN=your-auth-token-here
ROCKETCHAT_USER_ID=your-user-id-here

# Write Protection (Optional)
# Leave empty to disable all write operations (safest)
# Set to "true" to enable writes to all channels
# Set to comma-separated room IDs to whitelist specific channels
# Prefix with "!" to blacklist (e.g., "!GENERAL,!announcements")
ROCKETCHAT_WRITE_ENABLED=
ROCKETCHAT_WRITE_ROOMS=

# Safety Settings (Optional)
ROCKETCHAT_BLOCK_MENTIONS=true
ROCKETCHAT_MAX_MESSAGE_LENGTH=4000

# Cache Settings (Optional)
ROCKETCHAT_CACHE_TTL_CHANNELS=300000
ROCKETCHAT_CACHE_TTL_USERS=1800000

# Debug (Optional)
DEBUG=false
