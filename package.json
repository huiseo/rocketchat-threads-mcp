{
  "name": "mcp-server-rocketchat",
  "version": "0.1.0",
  "description": "MCP (Model Context Protocol) server for Rocket.Chat - Enable AI agents to interact with Rocket.Chat for knowledge retrieval and messaging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-rocketchat": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --env-file=.env dist/index.js",
    "start": "node --env-file=.env dist/index.js",
    "start:http": "node --env-file=.env dist/http-server.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rocketchat",
    "rocket.chat",
    "ai",
    "llm",
    "chatbot",
    "messaging",
    "collaboration"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
