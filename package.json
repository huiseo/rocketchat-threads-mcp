{
  "name": "mcp-server-rocketchat-threads",
  "version": "1.0.1",
  "description": "MCP server for Rocket.Chat with full thread support - search, list, and retrieve thread discussions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-server-rocketchat": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --env-file=.env dist/index.js",
    "start": "node --env-file=.env dist/index.js",
    "start:http": "node --env-file=.env dist/http-server.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rocketchat",
    "rocket.chat",
    "ai",
    "llm",
    "chatbot",
    "messaging",
    "collaboration"
  ],
  "author": "huiseo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/huiseo/rocketchat-threads-mcp.git"
  },
  "homepage": "https://github.com/huiseo/rocketchat-threads-mcp#readme",
  "bugs": {
    "url": "https://github.com/huiseo/rocketchat-threads-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
